#transport_preference(hidden='true')
    h1.page-header Transport
    .method-content
        #sms_transport
            | Sms:
            label#sms_label
            #change_sms_form(hidden='true')
                input#sms_input(type='text')
                button#change_sms_btn(onclick="change_transport(this.id.split('_')[1]);",class='btn btn-success') Valider
            br
            button#modify_sms_btn(onclick="$('#change_sms_form').show(); $('#'+this.id).hide();",class='btn btn-primary') Modifier
            button#delete_sms_btn(onclick="delete_transport('sms');",class='btn btn-danger') Supprimer
            button#test_sms_btn(onclick="test_transport('sms');",class='btn btn-secondary') Vérifier
        br
        #mail_transport
            |  Mail:
            label#mail_label
            #change_mail_form(hidden='true')
                input#mail_input(type='text')
                button#change_mail_btn(onclick="change_transport(this.id.split('_')[1]);",class='btn btn-success') Valider
            br
            button#modify_mail_btn(onclick="$('#change_mail_form').show(); $('#'+this.id).hide();",class='btn btn-primary') Modifier
            button#delete_mail_btn(onclick="delete_transport('mail');",class='btn btn-danger') Supprimer
            button#test_mail_btn(onclick="test_transport('mail');",class='btn btn-secondary') Vérifier
