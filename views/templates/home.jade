
script#home-dashboard(type='text/x-template').
    <div>
    <div v-if="messages.api">
       <h4>{{messages.api.title}}</h4>
       <p>
       <img class= "lock-solid" src="images/logo-transparent.png" style="max-width: 150px; float: right;" alt="">
       {{messages.api.home.description}}
       </p>
       <p>{{messages.api.home.note}}</p>
     {{messages.api.home.methods}}
     <div class="flex-container">
      <button v-for="method in methods" v-if="method.activate & method.authorize" role="link" class="methode" @click="navigate(method.name);" >
      <p>
      <img v-bind:src="'images/'+method.name+'.svg'" style="max-width: 200px;" alt="">
     </p>
     
      <span>{{messages.api.home[method.name]}}</span>
     </button>

     </div>
     
    </div>
    </div>
